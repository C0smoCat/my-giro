doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon" href="img/scooter1.svg" type="image/x-icon")
        title My-Giro - всё о гироскутерах
        link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap", rel="stylesheet")
    body
        .container
            header.header
                img.logo(src="img/scooter2.svg" alt="logo")
                a(href="#").phone +7 800 555 35 35
        main.main
            .container
                .slider-wrapper
                    input#slide1(type="radio" name="point" checked=selectedSlide === 1)
                    input#slide2(type="radio" name="point" checked=selectedSlide === 2)
                    input#slide3(type="radio" name="point" checked=selectedSlide === 3)
                    input#slide4(type="radio" name="point" checked=selectedSlide === 4)
                    input#slide5(type="radio" name="point" checked=selectedSlide === 5)
                    .slider
                        .slides.slide1.promo
                            h1.promo-title Онлайн-магазин гироскутеров
                            p.promo-text Топовые устройства по лучшим ценам с гарантией и доставкой
                        .slides.slide2.promo
                            h1.promo-title Официальный дилер производителя
                            p.promo-text Собственный сервисный центр, <br/>только оригинальный запчасти
                        .slides.slide3.promo
                            h1.promo-title Скидки и подарки
                            p.promo-text
                                strong Скидка 15%
                                |
                                | 10 дней до и после дня рождения
                                br
                                br
                                strong Вейп в подарок
                                |
                                | всем пенсионерам
                        .slides.slide4.promo
                            h1.promo-title Гарантия лучшей цены
                            p.promo-text Найдете дешевле - вернем разницу баллами
                        .slides.slide5.promo
                            h1.promo-title Спиннер в подарок
                            p.promo-text При единовременной покупке от 123 456 ₽
                    .controls
                        label(for="slide1")
                        label(for="slide2")
                        label(for="slide3")
                        label(for="slide4")
                        label(for="slide5")
                section.brands
                    .section-heading
                        h2.section-title Бренды
                    .cards.brands-card
                        each brand in brands
                            .card.brand-card
                                .brand-image(style={"background": brand})
                section.items
                    input#filter-gyro(type="checkbox" value="Гироскутер" checked hidden)
                    input#filter-velo(type="checkbox" value="Электровелосипед" checked hidden)
                    input#filter-sigv(type="checkbox" value="Сигвей" checked hidden)
                    input#filter-mowe(type="checkbox" value="Моноколесо" checked hidden)

                    .section-heading
                        h2.section-title Ассортимент
                        #items-filter
                            label#filter-label-gyro.filter-label.tooltip(for="filter-gyro")
                                span.tooltiptext Фильтр: гироскутеры
                            label#filter-label-velo.filter-label.tooltip(for="filter-velo")
                                span.tooltiptext Фильтр: электровелосипеды
                            label#filter-label-sigv.filter-label.tooltip(for="filter-sigv")
                                span.tooltiptext Фильтр: сигвеи
                            label#filter-label-mowe.filter-label.tooltip(for="filter-mowe")
                                span.tooltiptext Фильтр: моноколеса

                    .cards
                        each item in items
                            -
                                let filter;
                                switch (item.category) {
                                    case "Гироскутер": filter = "card-gyro"; break;
                                    case "Электровелосипед": filter = "card-velo"; break;
                                    case "Сигвей": filter = "card-sigv"; break;
                                    case "Моноколесо": filter = "card-mowe"; break;
                                }
                            .card(class = item.hot && "hot-card" class=filter)
                                img.card-image(src=item.img alt="image")
                                .card-text
                                    .card-heading
                                        h3.card-title=item.title
                                        span.card-tag.tag=item.status
                                    .card-info
                                        .rating
                                            img.rating-star(src="img/rating.svg" alt="rating")
                                            =item.rating
                                        .price=item.price
                                        .category=item.category
                        #items-empty
                            p Упс, ничего нет!
                            p Попробуйте поменять фильтр
        a(href="#")#scrolTop
        input#support-btn(type="checkbox" name="support" hidden)
        #support
